<%= context.instance_of? Book %>
<div class="row">
  <div class="col-lg-12">
	<h2>Chunks</h2>

	<div class="table-responsive">
	  <table class="table table-striped table-bordered table-hover tablesorter">
		<thead>
		<tr>
		  <th><%= Chunk.human_attribute_name(:title) %></th>
		  <th><%= Chunk.human_attribute_name(:section) %></th>
		  <th><%= Chunk.human_attribute_name(:chunkable_type) %>
		  <th><%= Chunk.human_attribute_name(:chunkable) %>
		  <th><%= Chunk.human_attribute_name(:version) %>
			<i class="fa fa-sort"></i></th>
		  <th>created_at <i class="fa fa-sort"></i></th>
		  <th> edit</th>
		</tr>
		</thead>
		<tbody class="searchable">
		<% chunks.each do |chunk| %>
			<tr>
			  <td><%= link_to chunk.title, (context.instance_of? Book) ? book_chunk_path(context, chunk) : chapter_chunk_path(context, chunk) %></td>
			  <td><%= chunk.section %></td>
			  <td><%= chunk.chunkable_type.to_s %></td>
			  <td><%= chunk.chunkable_id.to_s %></td>
			  <td><%= chunk.versions.last.id unless chunk.versions == nil %></td>
			  <td><%= chunk.created_at %></td>
			  <td><%= link_to "edit", (context.instance_of? Book) ? edit_book_chunk_path(context, chunk) : edit_book_chunk_path(context, chunk) %></td>
			</tr>
		<% end %>
		</tbody>
	  </table>
	</div>
  </div>
  <!-- /.col-lg-12 -->

</div> <!-- /.row -->