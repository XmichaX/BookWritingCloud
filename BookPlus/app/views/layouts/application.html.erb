<!DOCTYPE html>
<html>
<head>
  <title>BookPlus</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Navbar on each page -->
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">

  <div class="navbar-header">
    <a class="navbar-brand" <%= link_to "BookPlus", books_path %></a>
  </div>

  <div class="navbar-collapse collapse">
    <div class="navbar-form navbar-right">
      <% if user_signed_in? %>
          <div class="form-group white"><%= current_user.email %></div>
          <%= link_to(raw("Logout&nbsp;<span class=\"glyphicon glyphicon-log-out\"></span>"), destroy_user_session_path, :method => :delete, :class => 'btn btn-success') %>
      <% else %>
          <%= form_for(:user, :url => session_path(:user), :html => {:class => "navbar-right"}) do |f| %>
              <%= f.email_field :email, autofocus: true, :placeholder => "Email", :class => "form-control" %>
              <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", :class => "form-control" %>
              <%= button_tag raw("Login&nbsp;<span class=\"glyphicon glyphicon-log-in\"></span>"), :class => "btn btn-success", :type => "submit" %>
              <%= link_to "Sign up", new_user_registration_path, method: "get", :class => "btn btn-primary" %>
          <% end %>
      <% end %>
    </div>
  </div>


</div>
<p class="notice"><%= notice %></p>

<p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>


