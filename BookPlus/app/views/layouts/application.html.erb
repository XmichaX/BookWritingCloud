<!DOCTYPE html>
<html>
<head>
  <title>BookPlus</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<style>
    ul {
        list-style-type: none;
        float: right;
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    li {
        float: left;
    }

    a {
        display: block;
        width: 60px;
        background-color: #dddddd;
    }
</style>

</head>
<body>
<span class="debug"><%= params %></span>

<div class="application_header">
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation" id="bp_nav_top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">BookPlus</a>
    </div>
    <div class="navbar-collapse collapse">
      <form class="navbar-form navbar-right" role="form">
        <div class="form-group">
          <input type="text" placeholder="Email" class="form-control">
        </div>
        <div class="form-group">
          <input type="password" placeholder="Password" class="form-control">
        </div>
        <button type="submit" class="btn btn-success">Sign in</button>
      </form>
    </div><!--/.navbar-collapse -->
  </div>
</div>




	</div>

	<div class="application_body ">

		<div class="navigation ui-corner-all">
			<%= render "home/navigation" %>


		</div>

		<div class="page ui-corner-all">

			<%= yield %>
		</div>
	</div>

	</br style="clear:both;">

	<div class="application_footer">


			<% if notice %>
			    <div id="notice" ><%= notice %></div>
			<% elsif alert %>
			    <div id="alert" ><%= alert %></div>
			<% end %>
	</div>

</body>
</html>


