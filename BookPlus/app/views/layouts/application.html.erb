<!DOCTYPE html>
<html>

<head>
  <title>BookPlus</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
<div id="wrapper">
  <!-- Sidebar: Navbar on each page -->
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">

	<!-- Brand and toggle get grouped for better mobile display -->
	<div class="navbar-header">
	  <a class="navbar-brand" <%= link_to "BookPlus", root_path %></a>

	  <% if user_signed_in? %>
		  <a class="navbar-brand" <%= link_to "Home", books_path %></a>
		  <a class="navbar-brand" <%= link_to "Profile", edit_user_registration_path %></a>

	  <% end %>

	</div>
	<!-- Collect the nav links, forms, and other content for toggling -->


	<div class="navbar-collapse collapse">


	  <div class="navbar-form navbar-right">
		<% if user_signed_in? %>
			<div class="form-group white"><%= current_user.email %></div>
			<%= link_to(raw("Logout"), destroy_user_session_path, :method => :delete, :class => 'btn btn-success') %>
		<% else %>
			<%= link_to "Login", new_user_session_path, :class => "btn btn-primary" %>
			<%= link_to "Sign up", new_user_registration_path, method: "get", :class => "btn btn-primary" %>
		<% end %>
	  </div>
	</div>
	<!-- /.navbar-collapse -->
  </div>

  <div id="page-wrapper">

	<div class="row">
	  <div id="myCarousel" class="carousel slide">
		<div class="carousel-inner">
		  <div class="item active">
			<%= image_tag('slide_1.jpg') %>
			<div class="container">
			  <div class="carousel-caption">
				<h1>Write books online</h1>

				<p class="lead">Online Collaborative Book Writing als Cloud Service</p>
			  </div>
			</div>
		  </div>
		</div>
	  </div>

	  <%= yield %>


	</div>
	<!-- /.row -->

  </div>
  <!-- /#page-wrapper -->


</div>
<!-- /#wrapper -->

<!-- Footer
================================================== -->
<footer class="bs-docs-footer" role="contentinfo">
  <div class="container">

	<div class="alert alert-success alert-dismissable">
	  <button type="button" class="close" data-dismiss="alert">&times;</button>
	  <strong><p><%= notice %></p></strong>

	</div>

	<div class="alert  alert-danger alert-dismissable">
	  <button type="button" class="close" data-dismiss="alert">&times;</button>
	  <strong><p><%= alert %></p></strong>

	</div>

	<div class="bs-docs-social">
	  <ul class="bs-docs-social-buttons">
	  </ul>
	</div>


	<p>Designed,built by Schlee-Guimaraes and Fedorenko</p>
	<ul class="bs-docs-footer-links muted">
	  <li>Currently v1.0.0</li>
	  <li>&middot;</li>
	  <li><a href="https://github.com/XmichaX/BookWritingCloud">GitHub</a></li>
	  <li>&middot;</li>
	  <li><a href="https://trello.com/">Trello</a></li>

	</ul>
  </div>
</footer>
</body>
</html>


