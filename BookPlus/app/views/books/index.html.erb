<div class="row">


  <%= render 'navigation' %>


  <div class="col-lg-10 col-sm-11 responsive">

    <%= render 'books/filterbar' %>

    <hr class="featurette-divider">

    <table class="table table-striped books-content">
      <thead>
      <tr>
        <th>Title</th>
        <th>Edition</th>
        <th>Published</th>
        <th>Genre</th>
        <th>Tags</th>
        <th>User</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.edition %></td>
            <td><%= book.published %></td>
            <td><%= book.genre %></td>
            <td><%= book.tags %></td>
            <td>
              <% book.users.each do |usr| %>
                  <%= usr.first_name %> <%= usr.last_name %>
              <% end %>
            </td>
            <td>
              <%= link_to(raw('<span class="glyphicon glyphicon-pencil"></span>'), book) %>
              &nbsp;&nbsp;&nbsp;
              <%= link_to(raw('<span class="glyphicon glyphicon-trash"></span>'), book, method: :delete, data: {confirm: 'Are you sure?'}) %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= render 'overlayNewBook' %>
